{
  "name": "futures-risk-calculator",
  "version": "1.0.0",
  "description": "Futures Trading Risk Management Calculator",
  "type": "module",
  "scripts": {
    "build:css": "tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "watch:css": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "build": "npm run build:css && npm run version:update",
    "build:timestamp": "npm run build:css && npm run version:timestamp",
    "version:update": "node scripts/update-version.js",
    "version:timestamp": "node scripts/update-version-timestamp.js",
    "version:bump": "npm version patch && npm run version:update",
    "dev": "npm run watch:css",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0"
  }
}